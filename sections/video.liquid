{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class='section video tobeanimatedUp'>
	
  <a href=
     {% if section.settings.video_url.type == 'vimeo' %}
     "https://player.vimeo.com/video/{{section.settings.video_url.id}}?autoplay=1&color=FF0068"
     {% else %}
     "https://www.youtube.com/embed/{{section.settings.video_url.id}}?autoplay=1"
     {% endif %}
     class="fancybox-iframe" 
     data-fancybox-type="iframe"
     >
    <div class='elm imgVideo' style='background-image: url({{section.settings.imgVideo | img_url: "1300x"}})'>
      <div class='full'>
        {% if cart.attributes.language == 'ly27068' %}
          <h2 class='tobeanimatedRight'>{{ section.settings.text_videoEs }}</h2>
        {% else %}
          <h2 class='tobeanimatedRight'>{{ section.settings.text_video }}</h2>
        {% endif %}
        <img src='{% comment %}ly_asset_replace_for_[ "icon-playFill.svg" | asset_url ]_begin{% endcomment %}{% assign ly_asset = "icon-playFill.svg" %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}'>
      </div>
      
    </div>
  </a>
</div>

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "image_picker",
        "id": "imgVideo",
        "label": "Imagen del video",
        "info": "Imagen con un mínimo de width a 1300px"
      },
      {
        "id": "video_url",
        "type": "video_url",
        "label": "Video | Vimeo o Youtube",
        "accept": ["youtube", "vimeo"]
      },
	    {
         "type": "text",
         "id": "text_video",
         "label": "Título del video"
      },
      {
         "type": "text",
         "id": "text_videoEs",
         "label": "Título del video (ES)"
      }
	],
      "presets": [{
        "name": "Video",
        "category": "Media",
        "settings": {
        }
      }]
  }
{% endschema %}

