{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% layout settings.customer_layout %}

<div id="template">
  <div class="template_header">
    <h2 class="title"><ly-as-4314600>Activate Account</ly-as-4314600></h2>
    <p class="note"><ly-as-4314601>Create your password to activate your account</ly-as-4314601></p>
  </div>

  {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <label class="large" for="password"><ly-as-4314602>Password</ly-as-4314602></label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <label class="large" for="password_confirmation"><ly-as-4314603>Password Confirmation</ly-as-4314603></label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <input class="btn" type="submit" value="<ly-as-4314600>Activate Account</ly-as-4314600>" />
      <span class="note"><ly-as-4314604>or</ly-as-4314604></span>
      <input type="submit" class="cancel" name="decline" id="customer_decline" value="<ly-as-4314605>Decline Invitation</ly-as-4314605>" />
    </div>
  <input type="hidden" name="customer[tags]" value="ly#{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{{ language }}ly#"/>
  {% endform %}
</div>
